extends /layout/_default.pug
include /components/_components.pug

//- meta関係は変数を上書きします
//- 指定しない場合、_config.pug の内容が反映されます。
//- metaが足りない場合、個別対応ならheadブロックに記載、共通なら_common_head.pugに追記してください
block variable
  - page_title = 'インデックスページ'
  - description = 'indexページの概要文が入ります'
  - canonical = '';
  - og_description = "og:descriptionに入れる内容。省略時はdescriptionが入ります";
  - og_url = "";
  - og_image = "";
  - twitter_card = "summary_large_image";
//- headの最後に入れるもの(追加のmetaやCSS,gtm等のheadに置くJS等)
block head

//- bodyの最後に入れるもの
block script

//- メインエリアに入れるもの
block content
  section.p-page-fv
    h2.c-page-title.title-white
      .c-page-title__en CONTACT
      .c-page-title__jp お問い合わせ
    nav.breadcrumb.multiline-ellipsis
      ol 
        li 
          a(href="/") TOP 
        li 
          a(href="/") お問い合わせ
        li 
  section.p-page-news-content 
    .inner
      .text_center
        h1.page-title お問い合わせ
        p.page-desc ご質問・ご相談などお気軽にお問い合わせください。
      form.contact-form(action="#" method="post")
        label お名前（必須）
          input(type="text" name="name" required placeholder="例：山田 太郎")
        label メールアドレス（必須）
          input(type="email" name="email" required placeholder="例：sample@example.com")
        label お問い合わせ内容（必須）
          textarea(name="message" rows="5" required placeholder="ご用件を入力してください")
        button(type="submit") 送信